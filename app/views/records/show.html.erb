<p id="notice"><%= notice %></p>
<h1>Records for <%= @record.name %></h1>
<h3><%= @record.typ %></h3>
<table>
  <thead>
    <tr>
      <th>Val</th>
      <th>Unit</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>

        <tr class="<%= record == @record? 'highlight' : '' %>">

        <td><%= record.val %></td>
        <td><%= record.unit %></td>
        <td><%= record.created_at %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= record == @record? 'Best Record': ''%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', records_path %>
